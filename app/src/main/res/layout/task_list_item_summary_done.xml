<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="3"
    android:rowCount="2"
    android:background="@color/colorWhite"
    android:elevation="6dp"
    android:columnOrderPreserved="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Title"
        android:id="@+id/taskListItemSummary_title"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_vertical|left"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="User"
        android:id="@+id/taskListItemSummary_description"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_vertical|left"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:clickable="false" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:columnCount="3"
        android:rowCount="1">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/taskListItemSummary_like_button"
            android:layout_gravity="right"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginRight="0dp"
            android:background="#9e9e9e"
            android:src="@drawable/ic_tick"
            android:layout_marginLeft="10dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/taskListItemSummary_dislike_button"
            android:layout_gravity="right"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginRight="0dp"
            android:background="#9e9e9e"
            android:src="@drawable/ic_cross"
            android:layout_marginLeft="0dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/taskListItemSummary_checkbox"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/ic_check_box_done"
            android:layout_margin="15dp"
            android:layout_gravity="right"
            android:visibility="gone" />

    </GridLayout>


</GridLayout>