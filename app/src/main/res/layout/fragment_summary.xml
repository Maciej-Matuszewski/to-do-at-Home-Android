<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gr3mlin106.to_do_at_home.SummaryActivity$PlaceholderFragment"
    android:background="#E0E0E0">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/summary_fragment_taskList_listView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_nothing_to_show"
        android:id="@+id/nothingToShow_label"
        android:textColor="@color/colorPrimaryDark"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone" />

</RelativeLayout>
