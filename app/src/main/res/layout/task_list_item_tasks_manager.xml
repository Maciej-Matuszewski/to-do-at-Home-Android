<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff"
    android:elevation="6dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/prompt_title"
        android:id="@+id/tasksManagerItem_title"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/prompt_frequency"
        android:id="@+id/tasksManagerItem_subtitle"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical" />

    <GridLayout
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_rowSpan="2">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/tasksManagerItem_editButton"
            android:layout_margin="0dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@color/colorInactive"
            android:src="@drawable/ic_edit" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/tasksManagerItem_deleteButton"
            android:layout_margin="0dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@color/colorInactive"
            android:src="@drawable/ic_delete"
            android:layout_marginLeft="1dp" />
    </GridLayout>

</GridLayout>